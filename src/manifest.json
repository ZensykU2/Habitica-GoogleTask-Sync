{
    "manifest_version": 3,
    "name": "Habitica <-> Google Tasks Sync",
    "version": "1.0",
    "permissions": [
        "storage",
        "alarms",
        "identity",
        "activeTab",
        "scripting"
    ],
    "host_permissions": [
        "https://habitica.com/",
        "https://tasks.googleapis.com/"
    ],
    "background": {
        "service_worker": "assets/background.js",
        "type": "module"
    },
    "action": {
        "default_popup": "src/popup/popup.html"
    },
    "content_scripts": [
        {
            "matches": [
                "https://habitica.com/*"
            ],
            "js": [
                "assets/habiticaContent.js"
            ]
        },
        {
            "matches": [
                "https://mail.google.com/tasks/*",
                "https://tasks.google.com/*"
            ],
            "js": [
                "assets/googleContent.js"
            ]
        }
    ],
    "web_accessible_resources": [
        {
            "resources": [
                "assets/*"
            ],
            "matches": [
                "<all_urls>"
            ]
        }
    ],
    "oauth2": {
        "client_id": "PASTE_YOUR_GOOGLE_CLIENT_ID_HERE.apps.googleusercontent.com",
        "scopes": [
            "https://www.googleapis.com/auth/tasks"
        ]
    }
}